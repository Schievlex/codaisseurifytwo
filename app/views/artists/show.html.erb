<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <%= image_tag @artist.image_url %>
</p>

<h4>List of Songs</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><%= link_to song.title, artist_song_path(@artist, song) %></li>
    <% end %>
  </ul>
<% else %>
  <p>This artist doesn't have any songs.</p>
<% end %>

<hr>

<%= link_to "[Add Song to Artist]", new_artist_song_path(@artist.id) %>

<hr>

<%= link_to '[Edit Artist]', edit_artist_path(@artist) %> | <%= link_to "[Delete Artist]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>

