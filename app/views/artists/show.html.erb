<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<h4>List of Songs</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <p><%= link_to song.title, artist_songs_path(@artist, @song) %></p>
    <% end %>
  </ul>
<% else %>
  <p>This artist doesn't have any songs.</p>
<% end %>

<hr>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>